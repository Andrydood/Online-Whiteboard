extends general.pug

block links
  p#chatLink.redirectLink Go to Chat
  
block main
  .container#mainContainer
    .row
      .col-8#canvasContainer
        .row#canvasRow
          canvas#canvas
        .row#controlRow
          .col-4
            p Color
            input#colorPicker(type='color')
          .col-4
            p Stroke Width
            input#strokePicker(type='number', min='1', max='20', value='5')
          .col-4
            p 
            button#clearButton Clear 
            
      .col-4#userListContainer
        p Online Users:
        #userList
     
  script(src='scripts/canvas.js')
