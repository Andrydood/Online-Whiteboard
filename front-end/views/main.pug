extends index.pug

block content
  #loginScreen
    h2 Chose a Username
    form#loginForm
      input#nameInput(type="text")
      
  .container-fluid#mainContainer
    .row
      .col-8#canvasContainer
        .row#canvasRow
          canvas#canvas
        .row#controlRow
          .col-4
            p Color
            input#colorPicker(type='color')
          .col-4
            p Stroke Width
            input#strokePicker(type='number', min='1', max='20', value='5')
          .col-4
            p Clear
            button#clearButton Clear 
          
      .col-4#chatContainer
        #chatBox
          #chatText
          form#chatForm
            input#chatInput(type="text" autocomplete="off")
   
  
  script(src='scripts/loginPage.js')    
  script(src='scripts/canvas.js')
  script(src='scripts/webSockets.js')
  script(src='scripts/chat.js')
